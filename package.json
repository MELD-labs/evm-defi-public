{
  "name": "defi-evm",
  "version": "0.0.1",
  "repository": "https://github.com/MELD-labs/defi-evm.git",
  "author": "MELD Labs",
  "license": "MIT",
  "engines": {
    "node": ">=v20.11.0 <21"
  },
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test --parallel",
    "coverage": "hardhat coverage",
    "deploy": "hardhat deployProtocol",
    "deploy:localhost": "hardhat deployProtocol --network localhost",
    "deploy:kanazawa": "hardhat clean && hardhat compile && hardhat deployProtocol --network kanazawa",
    "deploy:meld": "hardhat clean && hardhat compile && hardhat deployProtocol --network meld",
    "verify:kanazawa": "hardhat verifyAll --network kanazawa",
    "verify:meld": "hardhat verifyAll --network meld",
    "ts:check": "eslint \"test/**/*.ts\" && prettier --check .",
    "ts:fix": "eslint --fix \"test/**/*.ts\" && prettier --write .",
    "solhint": "solhint contracts/**/*.sol",
    "size": "hardhat size-contracts"
  },
  "devDependencies": {
    "@ethersproject/bytes": "^5.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@openzeppelin/contracts": "4.9.6",
    "@openzeppelin/contracts-upgradeable": "4.9.6",
    "@openzeppelin/hardhat-upgrades": "^3.2.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": ">=20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "bignumber.js": "^9.1.1",
    "chai": "^4.4.1",
    "chai-bignumber": "^3.1.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "ethers": "^6.13.1",
    "hardhat": "^2.22.5",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^2.2.0",
    "mocha": "^10.5.1",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^4.5.4",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.4",
    "ts-node": ">=10.9.1",
    "typechain": "^8.3.0",
    "typescript": "^5.5.2"
  }
}
